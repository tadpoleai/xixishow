.home {
  height: calc(100vh - 48rpx);
  background-color: #e9e9e9;
  padding: 24rpx;
  overflow-y: scroll;
}
.title {
  line-height: 80rpx;
}
.card {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-bottom: 40rpx;
}
.img {
  width: 100%;
  height: 280rpx;
}
.bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 20rpx;
  font-size: 36rpx;
  height: 80rpx;
}
.btn {
  height: inherit;
  line-height: 80rpx;
  padding: 0 40rpx;
  background-color: #5db3cf;
  color: #fff;
}